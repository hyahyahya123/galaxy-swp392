<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exploring the galaxy"
                android:textColor="@color/white"
                android:textSize="80px"
                android:layout_marginTop="20px"
                android:layout_marginLeft="50px"></TextView>
            <TextView
                android:layout_toRightOf="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Logout"
                android:textSize="60px"
                android:layout_marginTop="20px"
                android:layout_marginLeft="100px"
                android:onClick="onLogout"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="60dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="350dp"
                    android:layout_height="400dp"
                    android:src="@drawable/sailor_moon_crop"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Date"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="110dp"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="140dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:text="Welcome, "
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:text="Name"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Draw"
                    android:layout_gravity="center"
                    android:layout_marginTop="130dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="_____"
                    android:layout_gravity="center"
                    android:layout_marginTop="123dp"
                    android:layout_marginLeft="50dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="_____"
                    android:layout_gravity="center"
                    android:layout_marginTop="123dp"
                    android:layout_marginLeft="-50dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Daily Fortune"
                    android:layout_gravity="center"
                    android:layout_marginTop="150dp"
                    android:textStyle="bold"></TextView>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="10dp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    >
                    <ImageView
                        android:id="@+id/roundedImageView2"
                        android:layout_width="350dp"
                        android:layout_height="100dp"
                        android:src="@drawable/solar_system"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Solar System"
                        android:textSize="25dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="10dp"></TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="10dp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    >
                    <ImageView
                        android:id="@+id/roundedImageView3"
                        android:layout_width="350dp"
                        android:layout_height="100dp"
                        android:src="@drawable/galaxy"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="The Galaxy"
                        android:textSize="25dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="10dp"></TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>



    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>